/* pages/good-detail/good-detail.wxss */
@import "../../assets/wxParse/wxParse.wxss";

.container{
  background: #f2f2f2;
  padding-bottom: 100rpx;
  min-height: 100%;
}
.swiper-box{
  width: 100vw;
  position: relative;
}
.swiper-box swiper{
  width: 100vw;
  height:748rpx;
}
.swiper-box image{
  width: 100vw;
  height: 748rpx;
  display: inline-block;
  overflow: hidden;
}
.good-info{
  background: #fff;
  margin-bottom: 24rpx;
  width: 100vw;
  position: relative;
}
.good-info .info{
  margin: 35rpx;
}
.good-info .title{
  font-size: 32rpx;
  line-height: 1.4;
  margin-bottom: 28rpx;
}
.good-info .share{
  font-size: 25rpx;
  line-height: 1.4;
  color: #e93b3d;
  margin-bottom: 28rpx;
}
.good-info .price{
  color:#999;
  font-size:24rpx;
  display: flex;
  justify-content: space-between;
}
.good-info .price text:nth-of-type(1){
  font-weight: bold;
  font-size:28rpx;
  color: #e93b3d;
}
.info-share{
  position: absolute;
  width: 100rpx;
  height: 120rpx;
  top: 0;
  right: 0;
}
.info-share image{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}
.share-mask{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(85,85,85,.6);
  z-index: 100;
}
.share-mask .share-content{
  position: fixed;
  width: 100%;
  height: 400rpx;
  background: #fff;
  bottom: 0;
  z-index: 101;
}
.share-mask .share-content .content1{
  height:260rpx;
}
.share-mask .share-content .content2{
  height:20rpx;
  background-color: #EEE;
}
.share-mask .share-content .content3{
  height:120rpx;
  line-height: 120rpx;
  text-align: center;
  color:#555;
  font-size: 16px;
}
.qrcode-button {
  padding:30rpx;
  margin-top:50rpx;
}
.qrcode {
  width:300rpx;
  height:300rpx;
  margin-top: 50rpx;
}
.good-desciption{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
}
.good-desciption .title{
  padding: 30rpx;
}
.good-desciption .content{
  padding: 0 10rpx;
  color:#666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.good-desciption image{
  width: 100%;
}
.footer{
  width: 100vw;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
}
.footer .contact{
  position: relative;
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /*line-height: 100rpx;
  text-align: center;
  padding-top: 26rpx;*/
  font-size: 20rpx;
  color: #008000;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/kefu.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
}
.footer .contact contact-button{
  opacity:0;
  position:absolute;
}
.footer .contact view{
  position:absolute;
  bottom:10rpx;
}