/* pages/category/category.wxss */
page{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.container{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
.left{
  width: 200rpx;
  height: 100vh;
  background: #f8f8f8;
  text-align: center;
}
.left .item{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left .item.active{
  background: #fff;
  color: #e93b3d;
}
.right{
  flex-grow: 1;
  background: #fff;
  height: 100vh;
}
.right .title{
  padding: 20rpx;
}
.right .content{
  border-bottom: 1px solid #f2f2f2;
  padding: 20rpx;
  overflow: hidden;
  font-size: 24rpx;
}
.right .content image{
  width: 160rpx;
  height: 160rpx;
  float: left;
  flex-shrink: 0;
}
.right .content .info{
  float: left;
  margin-left: 20rpx;
}
.right .content .info text{
  width: 100%;
  display: block;
  clear: both;
}
.right .content .info .name{}
.right .content .info .price{
  color: #e93b3d;
}